<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>PassWordFilter</filter-name>
        <filter-class>fitre.PassWordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PassWordFilter</filter-name>
        <servlet-name>Authentification</servlet-name>
    </filter-mapping>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>listner.connexionBD</listener-class>
    </listener>
    <servlet>
        <servlet-name>Client</servlet-name>
        <servlet-class>modele.Client</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controleur</servlet-name>
        <servlet-class>controle.Controleur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentification</servlet-name>
        <servlet-class>controle.Authentification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeLaguage</servlet-name>
        <servlet-class>controle.changeLaguage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Client</servlet-name>
        <url-pattern>/Client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controleur</servlet-name>
        <url-pattern>/Controleur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentification</servlet-name>
        <url-pattern>/Authentification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeLaguage</servlet-name>
        <url-pattern>/changeLaguage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
